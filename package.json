{
  "name": "ts-component-registry",
  "version": "1.0.0",
  "description": "TypeScript component registry with automatic discovery, dependency injection, and decorator-based mapping",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "rebuild": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "typescript",
    "dependency-injection",
    "component-map",
    "component-registry",
    "auto-discovery",
    "design-patterns",
    "strategy-pattern",
    "plugin-architecture",
    "decorators",
    "ioc",
    "inversion-of-control"
  ],
  "author": "Ismail Kharoub",
  "license": "MIT",
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/examples/**/*",
      "!src/cli/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IsmailKharoub/ts-component-registry.git"
  },
  "bugs": {
    "url": "https://github.com/IsmailKharoub/ts-component-registry/issues"
  },
  "homepage": "https://github.com/IsmailKharoub/ts-component-registry#readme"
}
